<h1 class="article">Articles</h1>

<ul class="list-group">
  <% @articles.each do |article| %>
    <li class="list-group-item list-group-item-action">
    <div class="d-flex justify-content-between">
      <%= link_to article.title, article %>
      <% if article.user_id == current_user.id%>
      <div>
        <button type="button" class="btn btn-info btn-sm">edit</button>
        <button type="button" class="btn btn-success btn-sm btn-success__title">Submit</button>
        <button type="button" class="btn btn-danger btn-sm">Cancel</button>
      </div>
      <% end %>
     </div>
     <div class="d-flex justify-content-between">
     <div>
      <span class="article__body--initial"><%=article.body.slice(0,100)%></span>
      <span class="article__body--complete"><%=article.body%></span>
      <span class="more">more...</span>
      </div>
        <% if article.user_id == current_user.id%>
        <div>
          <button type="button" class="btn btn-info btn-sm btn__article__body">edit</button>
          <button type="button" class="btn btn-success btn-sm btn-success__body">Submit</button>
          <button type="button" class="btn btn-danger btn-sm">Cancel</button>
        </div>
        <% end %>
      </div>
      <div class="article__comments">
      <h2>Comments</h2>
      <%= render article.comments %>
      </div>
    </li>
  <% end %>
</ul>
<%= link_to "New Article", new_article_path %><br>
<% if user_signed_in? %>
<p> Logged in as <%= current_user.email %></p>
<%= link_to 'Sign out', destroy_user_session_path, :method => :delete %>
<% end %>
